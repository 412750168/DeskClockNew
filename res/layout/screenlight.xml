<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="250dp"
    android:layout_height="430dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textview_screenlight_num_2"
        android:layout_width="@dimen/screenlight_60"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/screenlight_100"
        android:layout_marginRight="@dimen/screenlight_5"
        android:textColor="@color/clock_white"
        android:textSize="@dimen/screenlight_20"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textview_screenlight_num"
        android:layout_width="@dimen/screenlight_10"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/screenlight_10"
        android:layout_marginTop="@dimen/screenlight_300"
        android:textSize="@dimen/screenlight_20"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/screenlight_light"
            android:textColor="@color/clock_white"
            android:textSize="@dimen/screenlight_30" />

        <com.android.deskclock.SeekBar_vertical
            android:id="@+id/seekBarDownUp"
            android:layout_width="@dimen/screenlight_30"
            android:layout_height="@dimen/screenlight_300"
            android:max="255"
            android:progressDrawable="@drawable/seekber_background"
            android:thumb="@null"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>